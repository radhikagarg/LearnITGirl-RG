<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
   <class name="learnit.model.UserDetails" table="tbl_user" schema="LearnIt">
      <meta attribute="class-description">
         This class contains the user details.
      </meta>

      <id name="id" type="int" column="user_id">
         <generator class="native"/>
      </id>

      <property name="userName" type="string">
      <column name="user_name" sql-type="varchar" length="45"/>
      </property>

      <property name="email" type="string">
         <column name="email_id" sql-type="varchar" length="45"/>
      </property>

     </class>
</hibernate-mapping>
